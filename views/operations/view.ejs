<%- include("../partials/header")   %>
<div class="cui__layout__content">
    <div class="cui__utils__content">
        <div class="card">
            <div class="card-body">
                <div>
                    <h5 class="mb-4"><strong>Assignments</strong></h5>
                    <div class="mb-5">
                        <div class="d-flex flex-row-reverse">
                            <a class="btn btn-primary btn-sm" data-toggle="modal" data-target="#addNewModal"
                                href="/products/new"><i class="fas fa-plus-circle pr-2"></i>Sample</a>
                        </div>
                        <div class="cui__utils__content">
                            <div class="card">
                                <div class="card-body" id="calenderHead">
                                    <div class="d-flex flex-wrap mb-3">
                                        <div class="mr-5 flex-grow-1">
                                            <div class="text-uppercase text-dark font-weight-bold mb-3">Calendars</div>
                                            <div class="d-flex flex-wrap">
                                                <label
                                                    class="kit__utils__control kit__utils__control__checkbox kit__calendar__event">
                                                    <input type="checkbox" checked="checked" />
                                                    <span class="kit__utils__control__indicator"></span>
                                                    Assigned
                                                </label>
                                                <label
                                                    class="kit__utils__control kit__utils__control__checkbox kit__calendar__event">
                                                    <input type="checkbox" />
                                                    <span class="kit__utils__control__indicator"></span>
                                                    Due Today
                                                </label>
                                                <label
                                                    class="kit__utils__control kit__utils__control__checkbox kit__calendar__event">
                                                    <input type="checkbox" />
                                                    <span class="kit__utils__control__indicator"></span>
                                                    Due Past
                                                </label>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="text-uppercase text-dark font-weight-bold mb-3">Events</div>
                                            <div class="d-flex flex-wrap">
                                                <div class="kit__calendar__event">
                                                    <div class="kit__utils__donut kit__utils__donut--success"></div>
                                                    Assigned
                                                </div>
                                                <div class="kit__calendar__event">
                                                    <div class="kit__utils__donut kit__utils__donut--orange"></div>
                                                    Due today
                                                </div>
                                                <div class="kit__calendar__event">
                                                    <div class="kit__utils__donut kit__utils__donut--danger"></div>
                                                    Due past
                                                </div>


                                            </div>
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="text-uppercase text-dark font-weight-bold mb-3">User</div>
                                            <div class="d-flex flex-wrap">
                                                <div class="kit__calendar__event w-100">
                                                    <select required id="assignedUserId"
                                                        class="selectpicker form-control" data-live-search="true">
                                                        <option>Name1</option>
                                                        <option>Name1</option>
                                                        <option>Name1</option>
                                                        <option>Name1</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div id="calenderView" class="calenderView"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
